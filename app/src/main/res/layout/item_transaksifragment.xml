<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/transaksi_namaBankSampah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama Bank Sampah"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/text"
        android:layout_marginBottom="2dp"/>
    
    <TextView
        android:id="@+id/transaksi_jumlahSampah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/transaksi_namaBankSampah"
        android:text="Jumlah: 0 Kg"
        android:textSize="18sp"
        android:textColor="@color/text"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"/>

    <TextView
        android:id="@+id/transaksi_nominalTransaksi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/transaksi_jumlahSampah"
        android:text="Transaksi: Rp 0,-"
        android:textSize="18sp"
        android:textColor="@color/text"
        android:layout_marginTop="2dp"/>

    <TextView
        android:id="@+id/transaksi_waktuTransaksi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="01/01/2016 00:00"
        android:textSize="18sp"
        android:textColor="@color/text"
        android:layout_marginTop="2dp"/>


</RelativeLayout>