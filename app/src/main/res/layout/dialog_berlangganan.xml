<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:padding="30dp"
              android:orientation="vertical"
              android:background="@drawable/style_konfirm_background">

    <TextView
        android:id="@+id/berlangganan_nama_bank"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Bank Sampah Name"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="#FFF"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Berlangganan dengan bank ini?"
        android:textColor="#FFF"
        android:textSize="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10">

        <Button
            android:layout_weight="5"
            android:id="@+id/berlangganan_batal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Batal"
            android:background="@drawable/style_konfirm_button_left"
            android:textColor="#FFF"
            android:textStyle="bold"
            />
        <Button
            android:layout_weight="5"
            android:id="@+id/berlangganan_ya"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Ya"
            android:background="@drawable/style_konfirm_button_right"
            android:textColor="#FFF"
            android:textStyle="bold"
            />

    </LinearLayout>

</LinearLayout>