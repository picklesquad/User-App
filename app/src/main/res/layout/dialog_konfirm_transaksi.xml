<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:padding="30dp"
              android:orientation="vertical"
              android:background="@drawable/style_konfirm_background">

        <TextView
            android:id="@+id/konfirm_nama_bank"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Bank Sampah Name"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textColor="#FFF"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Sampah Anda:"
            android:textColor="#FFF"
            android:textSize="16dp"/>
        <TextView
            android:id="@+id/konfirm_plastik"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="1 kg plastik"
            android:textColor="#FFF"
            android:textSize="16dp"/>
        <TextView
            android:id="@+id/konfirm_besi"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="2 kg besi"
            android:textColor="#FFF"
            android:textSize="16dp"/>
        <TextView
            android:id="@+id/konfirm_kertas"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="3 kg kertas"
            android:textColor="#FFF"
            android:textSize="16dp"/>
        <TextView
            android:id="@+id/konfirm_botol"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="4 buah botol"
            android:textColor="#FFF"
            android:textSize="16dp"/>
        <TextView
            android:id="@+id/konfirm_harga"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Harga: Rp 20.000,00"
            android:textColor="#FFF"
            android:textSize="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="10">

            <Button
                android:layout_weight="5"
                android:id="@+id/konfirm_tolak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Tolak"
                android:background="@drawable/style_konfirm_button_left"
                android:textColor="#FFF"
                android:textStyle="bold"
                />
            <Button
                android:layout_weight="5"
                android:id="@+id/konfirm_terima"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Setuju"
                android:background="@drawable/style_konfirm_button_right"
                android:textColor="#FFF"
                android:textStyle="bold"
                />

        </LinearLayout>

</LinearLayout>